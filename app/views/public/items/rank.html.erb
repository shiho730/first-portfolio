<div class="container">
  <div class="row">
    <div class="page-head">Best sellers</div>
      <hr width="100%" align="center" color="gray">
        <% @items.each do |item| %>
          <div class="col-md-3">
                  <table>
                    <tr>
                      <td>
                        <%= link_to item_path(item) do %>
                          <%= attachment_image_tag item, :image, format: 'jpeg', fallback: "no_image.jpg", size: "200x250" %>
                        <% end %><br>
                        <%= item.name %><br>
                        <%= item.including_tax.to_s(:delimited) %>å††
                      </td>
                    </tr>
                  </table>
                </div>
        <% end %>
    </div>
</div>
