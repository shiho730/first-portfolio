<!-- ジャンル検索 -->
<div class="container">
  <div class="row">
    <div class="col-md-2">
      <%#= render "genres_list", genres: @genres %>
    </div>
    <div class="col-md-10">
      <h3 class="item-index">商品一覧（全<%= @items_n.count %>件）</h3>
      <div id="item">
        <% @items.each do |item| %>
          <div class="col-md-3">
            <table>
              <tr>
                <td>
                  <%= link_to item_path(item) do %>
                    <%= attachment_image_tag item, :image, format: 'jpeg', fallback: "no_image.jpg", size: "200x100" %>
                  <% end %><br>
                  <%= item.name %><br>
                  <%= item.including_tax.to_s(:delimited) %>円
                </td>
              </tr>
            </table>
          </div>
        <% end %>
      </div>
      <!-- １ページに８件表示する -->
      <%= paginate @items %>
    </div>
  </div>
</div>