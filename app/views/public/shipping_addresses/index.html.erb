<% provide(:title, "配送先登録/一覧") %>
<div class="container">
  <div class="row">
    <div class="col-md-3 col-md-offset-2">
      <h3 class="text-center", style="background-color: #EEEEEE;">配送先登録/一覧</h3>
      <!--<h2 class="head-line text-center title_h2">配送先登録/一覧</h2>-->
      <div id="error">
        <%= render "layouts/error_messages", resource: @shipping_address %>
      </div>
    </div>
  </div>

  <%= form_with(model: @shipping_address, :url => {:controller => "public/shipping_addresses"}) do |f| %>
    <div class="row shipping_address">
      <div class="form-group col-md-7 col-md-offset-1">
        <table class="table">
          <tr>
            <td class="table-noborder", width="160px">
              <%= f.label :"郵便番号(ハイフンなし)" ,class: "control-label" %>
            </td>
            <td class="table-noborder", width="100px">
              <%= f.text_field :postal_code, class: "form-control-static postal_code" %>
            </td>
          </tr>

          <tr>
            <td class="table-noborder">
              <%= f.label :"住所" ,class: "control-label" %>
            </td>
            <td class="table-noborder">
              <%= f.text_field :address, class: "form-control-static address", :size=>"56px" %>
            </td>
          </tr>

          <tr>
            <td class="table-noborder">
              <%= f.label :"宛名" ,class: "control-label" %>
            </td>
            <td class="table-noborder">
              <%= f.text_field :name, class: "form-control-static name" %>
            </td>
          </tr>

        </table>
      </div>
      <div class="form-group col-md-2", style="margin-top: 100px;">
        <%= f.submit '登録する', class: "pull-right btn-lg btn-success" %>
      </div>
    </div>
  <% end %>

        <div id="create">
          <%= render "ships_index", shipping_addresses: @shipping_addresses %>
        </div>
    </div>
  </div>
</div>