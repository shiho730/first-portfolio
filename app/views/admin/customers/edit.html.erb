  <div class="container">
		<div class="row">
			<div class="col-md-3 col-md-offset-1" style="background-color: #EEEEEE;">
				<h4 class="text-center"><%=@customer.name %>さんの会員情報編集</h4>
			</div>
		</div>
		<br>
		<br>
		<div class="row">
			<div class="col-md-5 col-md-offset-1">
				<% if @customer.errors.any? %>
  				<div class="alert-warning">
          	<div class="alert1">
             <p><%= pluralize(@customer.errors.count, "error") %></p>
            </div>
            <ul>
            	<% @customer.errors.full_messages.each do |message| %>
              	<li><%= message %></li>
             	<% end %>
            </ul>
          </div>
       	<% end %>
				<%=form_for(@customer, url:admin_customer_path) do |f| %>
					<table class="table">
						<div class="form-group">
						 	<tr>
								<th class="table-noborder">会員ID</th>
								<td class="table-noborder"><%= @customer.id %></td>
							</tr>
						</div>
						<div class="form-group">
							<tr>
								<th class="table-noborder", width="100">氏名</th>
								<td class="table-noborder">
									<%= f.text_field :last_name, class:"center" %>  <%= f.text_field :first_name, class:"center"%>
								</td>
							</tr>
						</div>
						<div class="form-group">
							<tr class="table-noborder">
								<th class="table-noborder">フリガナ</th>
								<td class="table-noborder"><%= f.text_field :kana_last_name, class:"center" %>  <%= f.text_field :kana_first_name, class:"center" %></td>
							</tr>
						</div>
						<div class="form-group">
							<tr>
								<th class="table-noborder">郵便番号</th>
								<td class="table-noborder"><%= f.text_field :zip_code, class:"center" %></td>
							</tr>
						</div>
						<div class="form-group">
							<tr>
								<th class="table-noborder">住所</th>
								<td class="table-noborder"><%= f.text_field :address, :size=>"60", class:"center"  %></td>
							</tr>
						</div>
						<div class="form-group">
							<tr>
								<th class="table-noborder">電話番号</th>
								<td class="table-noborder"><%= f.text_field :phone_number, class:"center" %></td>
							</tr>
						</div>
						<div class="form-group">
							<tr>
								<th class="table-noborder">メールアドレス</th>
								<td class="table-noborder"><%= f.email_field :email, class:"center" %></td>
							</tr>
						</div>
						<div class="form-group">
							<tr>
								<th class="table-noborder">会員ステータス</th>
								<td class="table-noborder">
									<%= f.radio_button :is_deleted, :Availble %>
									<%= f.label '有効' %>
									<%= f.radio_button :is_deleted, :Invalid %>
									<%= f.label '退会済み' %>
								</td>
							</tr>
						</div>
						<div class="form-group">
							<tr>
								<th class="table-noborder"><%= f.submit '変更を保存する', class:"btn btn-primary btn-md" %></th>
							</tr>
						</div>
					</table>
				<% end %>
			</div>
		</div>
	</div>
