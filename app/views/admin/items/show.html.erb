<div class="container">
	<div class="row">

		<h2>商品詳細</h2>

		<div class="col-lg-3">
			<%= attachment_image_tag(@item, :image, fallback: "no_image.jpg", size: "200x250") %>
		</div>
		<div class="col-lg-9">
			<table class="table table-hover">
				<tbody>
					<tr>
						<th class="table-noborder">商品名</th>
						<td class="table-noborder"><%= @item.name %></td>

					</tr>
					<tr>
						<th class="table-noborder">商品説明</th>
						<td class="table-noborder"><%= @item.description %></td>
					</tr>
					<tr>
						<th class="table-noborder">ジャンル</th>
						<td class="table-noborder"><%= @item.genre.name %></td>
					</tr>
					<tr>
						<th nowrap class="table-noborder">税込価格(税抜価格)</th>
						<td class="table-noborder"><%= @item.including_tax %>円(<%= @item.price_excluding_tax %>)円</td>
					</tr>
					<tr>
						<th nowrap class="table-noborder">販売ステータス</th>
						<td class="table-noborder">
							<% if @item.is_active == "Availble"  %>
					        <%= "販売中" %>
					        <% else %>
					        <%= "売り切れ" %>
					        <% end %>
	     			</td>
					</tr>
					<tr>
						<th class="table-noborder"> </th>
						<td align="right" class="table-noborder">
							<%= link_to "編集ページへ", edit_admin_item_path, class:"btn btn-info btn-md" %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
