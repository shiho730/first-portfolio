<div class="container">
  <div class="row">
  	<div class="col-md-2 col-md-offset-2" style="background-color: #EEEEEE;">
      <h4 class="text-center">商品一覧</h4>
    </div>

		<div align="right">
			<%= link_to "", new_admin_item_path, class:"glyphicon glyphicon-plus-sign" %>
		</div>

		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th>商品ID</th>
							<th>商品名</th>
							<th>税抜価格</th>
							<th>ジャンル</th>
							<th>販売ステータス</th>
						</tr>
					</thead>

					<tbody>
						<% @items.each do |item| %>
						<tr>
							<td><%= item.id %></td>
							<td><%= link_to item.name, admin_item_path(item) %></td>
							<td><%= item.price_excluding_tax %></td>
							<td><%= item.genre.name %></td>
							<td>
								 <% if item.is_active == "Availble"  %>
		             <%= "販売中" %>
		             <% else %>
		              <%= "売り切れ" %>
		             <% end %>
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
    </div>
	</div>
</div>
